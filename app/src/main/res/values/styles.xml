<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="textColorError">@android:color/holo_red_dark</item>

        <item name="android:actionOverflowButtonStyle">@style/ActionOverflow</item>
        <item name="android:actionMenuTextColor">#FFF</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_white_24dp</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ActionOverflow">
        <item name="android:paddingEnd">@dimen/standard_padding</item>
        <item name="android:src">@drawable/ic_more_vertical_white_24dp</item>
    </style>

    <style name="Card" parent="Base.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="Card.Clickable" parent="Base.CardView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Card.Floating" parent="Base.CardView">
        <item name="cardElevation">8dp</item>
    </style>

</resources>
